<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.RegistrationSucceedPage"
             xmlns:local ="clr-namespace:mobile.Helpers"
             Title="{local:Translate SucRegistration}"
             >

    <Grid Padding="50,0,50,0">
        <Grid.RowDefinitions>

            <RowDefinition Height="1*"/> <!--Logo-->
            <RowDefinition Height="Auto"/><!--Message-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="{local:ImageResource  mobile.Images.logo.png }"  Grid.Row="0"/>
        <Label x:Name="lblMessage" Text="" HorizontalOptions="Center" Grid.Row="1" HorizontalTextAlignment="Center"/>
        <Button x:Name="btnMainPage" Text="{local:Translate GoMainPage}" Grid.Row="2" Margin="0, 10" Clicked="btnMainPage_Clicked"/>
        <Label Text="{local:Translate AllRightsRes}" HorizontalOptions="Center" VerticalOptions="EndAndExpand" Grid.Row="3"/>
    </Grid>

</ContentPage>