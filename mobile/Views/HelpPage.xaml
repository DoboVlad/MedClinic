<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:mobile.Helpers"
             x:Class="mobile.Views.HelpPage">
    <ScrollView>
        <Grid BackgroundColor="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackLayout Padding="0" Margin="0, 50" Grid.Row="0">
                <StackLayout>
                    <Image Source="{local:ImageResource  mobile.Images.logo.png}" WidthRequest="400" Margin="0,0,0,40"/>
                    <!--bind the image resource -->
                </StackLayout>
                <Frame HasShadow="True" Margin="20, 0" >
                    <StackLayout>
                    <Label x:Name="lblGuideRegister" Text="{local:Translate PacientRegisterGuide}"/>
                    <Label x:Name="lblGuideAcceept" Text="{local:Translate PacientAcceptGuide}"/>
                    <Label x:Name="lblRecPwdGuide" Text="{local:Translate PwdRecoveryGuide}"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <Label Grid.Row="1" Text="{local:Translate AllRightsRes}" HorizontalOptions="Center" VerticalOptions="End"/>
        </Grid>
    </ScrollView>
</ContentPage>